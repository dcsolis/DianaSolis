* {
  margin: 0;
  padding: 0;
}


html {
  box-sizing: border-box;
  font-size: 62.5%;
  
}

@media (min-height: 520px) {
  p {
    font-size: 3.2vw;
  }
  
  h1 {
    font-size: 5.5vw;
  }
}


.welcome-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #1D441D;
  height: 100vh;
  width: 100%;
  
}

.welcome-section > p {
  font-size: 3vw;
  font-family: "Courier New";
  text-align: center;
  color: #F2EDED;
}

.welcome-section > h1 {
  font-size: 5vw;
  font-family: "Courier New";
  text-align: center;
  color: #F2EDED;
}

.nav {
  display: flex;
  justify-content: flex-end;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 6vw;
  background-color: black;
  color: #F2EDED;
  align-items: center;
}

.nav-a {
  text-decoration: none;
  color: #F2EDED;
}

.nav-a:hover {
  background: #245C24;
}

.nav-ul {
  font-size: 1.5vw;
  list-style: none;
  color: #F2EDED;
  display: flex;
  margin-right: 2.2vw;
}

.nav-li {
  margin-right: 2vw;
  justify-content: center;
  
  
}

h2 {
  text-align: center;
  font-size: 2.8vw;
  padding: 3.5vw;
  color: #F2EDED;
  
}

.projects-sec {
  background: #AE4F42;
}

.projects-grid {
  display: grid;
  grid-template-columns: 50% 50%;
  grid-gap: 2vw;
  padding: 2vw;
}


.project-tile {
  display: grid;
  grid-template-rows: 90% 10%;
}

.project-tile > p {
  font-size: 2vw;
  color: #F2EDED;
  background: #AE4F42;
  
  
}

.project-img {
  width: 90%;
  height: 90%;
  
}


.contact {
  display: flex;
  background-color: #013227;
  color: #F2EDED;
  justify-content: flex-end;
}

.contact-grid {
  display: grid;
  grid-template-columns: 28% 33% 33%;
  grid-gap: 2vw;
  margin: 3vw;
  padding: 1.5vw;
}

.contact-grid > a {
  font-size: 2vw;
  text-decoration: none;
  color: #F2EDED;
  
}


